#include <stdio.h>
#include <stdarg.h>

int _printf(const char *format, ...) 
{
va_list args;
va_start(args, format);
int count = 0;

while (*format) {
if (*format == '%') {
format++; // Move past '%'

// Handle conversion specifiers
switch (*format) {
case 'c': {
char c = va_arg(args, int);
putchar(c);
count++;
break;
}
case 's': {
char* str = va_arg(args, char*);
while (*str) {
putchar(*str);
str++;
count++;
}
break;
}
case '%': {
putchar('%');
count++;
break;
}
default: {
// If an unsupported specifier is used, we'll just print the '%'
putchar('%');
putchar(*format);
count += 2;
break;
}
}
} else {
putchar(*format);
count++;
}
format++;
}

va_end(args);
return count;
}

int main() {
_printf("Hello, %s! Today is %c.\n", "John", 'A');
_printf("Printing a percent sign: %%\n");
return (0);
}

